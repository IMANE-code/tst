@model tst.Models.student;
@{
    ViewData["Title"] = "Add Student";
}

<form method="post" asp-action="AddStudent">
    <div class="modal-header">
        <h4 class="modal-title">Add Student</h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label>ID</label>
            <input type="text" asp-for="id" class="form-control" required>
        </div>
        <div class="form-group">
            <label>CIN</label>
            <input type="text" asp-for="cin" class="form-control" required>
        </div>
        <div class="form-group">
            <label>NOM</label>
            <input type="text" asp-for="nom" class="form-control" required>
        </div>
        <div class="form-group">
            <label>PRENOM</label>
            <input type="text" asp-for="prenom" class="form-control" required>
        </div>
        <div class="form-group">
            <label>ADRESSE</label>
            <input type="text" asp-for="adresse" class="form-control" required>
        </div>
    </div>
    <div class="modal-footer">
        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
        <input type="submit" class="btn btn-success" value="Add">
    </div>
</form>